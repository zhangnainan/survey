<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sg.survey.submit.SurveySubmitDao">
    <insert id="insertSurveySubmit" parameterType="SurveySubmitModel">
        insert into survey_submits(id,survey_id,submitter,wx_nickname) values(#{id},#{surveyId},#{submitter},#{wxNickname})
    </insert>

    <insert id="insertSurveySubmitList" parameterType="java.util.List">
        insert into survey_submits(id,survey_id,submitter) values
        <foreach collection="list" index="index" item="item" separator="," open="" close="" >
            (#{item.id},#{item.surveyId},#{item.submitter})
        </foreach>
    </insert>

    <select id="getSurveySubmitsById" parameterType="java.lang.String" resultType="SurveySubmitModel">
        select * from survey_submits where survey_id=#{surveyId}
    </select>

    <select id="getSurveySubmitsByIdAndWxNickname" parameterType="java.lang.String" resultType="SurveySubmitModel">
        select * from survey_submits where survey_id=#{surveyId} and wx_nickname=#{wxNickname}
    </select>

    <delete id="deleteSurveySubmitsBySurveyId" parameterType="java.lang.String">
        delete from survey_submits where survey_id=#{surveyId}
    </delete>

    <delete id="deleteSurveySubmitById" parameterType="java.lang.String">
        delete from survey_submits where id=#{id}
    </delete>
</mapper>